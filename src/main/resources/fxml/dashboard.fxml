<?import javafx.scene.layout.VBox?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.aadidev.foodexpirytracker.controller.DashboardController"
      spacing="10">

    <padding>
        <Insets top="15.0" right="15.0" bottom="15.0" left="15.0"/>
    </padding>

    <HBox spacing="10">
        <TextField fx:id="foodNameInput" promptText="Food name"/>
        <DatePicker fx:id="expiryDateInput"/>
        <Button text="Add" onAction="#onAddItem"/>
    </HBox>

    <TableView fx:id="tableView">
        <columns>
            <TableColumn fx:id="nameColumn" text="Name" prefWidth="200"/>
            <TableColumn fx:id="dateColumn" text="Expiry Date" prefWidth="200"/>
        </columns>
    </TableView>
</VBox>