<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.aadidev.foodexpirytracker.controller.LoginController"
            prefWidth="500" prefHeight="500"
            minWidth="500" minHeight="500"
            style="-fx-background-color: linear-gradient(to bottom right, #f8fafc, #dbeafe);">
    <VBox spacing="18" alignment="CENTER" AnchorPane.topAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.bottomAnchor="0"
          style="-fx-background-color: white; -fx-background-radius: 18; -fx-padding: 36; -fx-effect: dropshadow(gaussian, #a5b4fc, 12, 0.2, 0, 4);">
        <Label text="Login" style="-fx-font-size: 2em; -fx-font-weight: bold; -fx-text-fill: #6366f1;"/>
        <TextField fx:id="usernameField" promptText="Username"
                   style="-fx-background-radius: 8; -fx-border-radius: 8; -fx-border-color: #a5b4fc; -fx-border-width: 1; -fx-padding: 10;"/>
        <PasswordField fx:id="passwordField" promptText="Password"
                       style="-fx-background-radius: 8; -fx-border-radius: 8; -fx-border-color: #a5b4fc; -fx-border-width: 1; -fx-padding: 10;"/>
        <Button text="Login" onAction="#handleLogin"
                style="-fx-background-color: #6366f1; -fx-text-fill: white; -fx-background-radius: 8; -fx-font-size: 1.1em; -fx-padding: 8 0;"/>
        <Button text="Don't have an account? Sign Up" onAction="#goToSignup"
                style="-fx-background-color: transparent; -fx-text-fill: #6366f1; -fx-underline: true; -fx-font-size: 1em;"/>
    </VBox>
</AnchorPane>
